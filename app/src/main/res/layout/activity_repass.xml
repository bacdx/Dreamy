<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activity.RepassActivity">
    <RelativeLayout
        android:id="@+id/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/icon_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/btn_back"
            android:fontFamily="@font/font2"
            android:text="Đổi Mật Khẩu"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/layout_toolbar" />

    <LinearLayout
        android:id="@+id/layout_mk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <EditText
            android:id="@+id/edt_mk_cu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:textColor="@color/black"
            android:gravity="center"
            android:hint="Mật khẩu cũ"
            android:textSize="16sp"
            android:inputType="textPassword"/>
        <LinearLayout
            android:id="@+id/layout_loi_mkc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/bg_edt_xac_nhan_mk">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning" />

            <TextView
                android:id="@+id/tv_loi_mkc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/font1"
                android:text="Mật khẩu cũ không chính xác"
                android:textColor="#DE181F"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_mk_moi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:layout_marginTop="20dp"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:hint="Mật khẩu mới"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/layout_loi_mkm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/bg_edt_xac_nhan_mk">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning" />

            <TextView
                android:id="@+id/tv_loi_mkm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/font1"
                android:text="Mật khâu không trùng khớp"
                android:textColor="#DE181F"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_nhap_lai_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font2"
            android:gravity="center"
            android:hint="Nhập lại mật khẩu"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <LinearLayout
            android:id="@+id/layout_loi_re_mk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/bg_edt_xac_nhan_mk">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning" />

            <TextView
                android:id="@+id/tv_loi_re_mk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/font1"
                android:text="Mật khâu không trùng khớp"
                android:textColor="#DE181F"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="46dp"
        android:layout_marginTop="53dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_mk">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_huy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_xac_nhan"
            android:backgroundTint="#D9D9D9"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="#4F646F"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_xac_nhan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_xac_nhan"
            android:text="Xác Nhận"
            android:backgroundTint="#F98AAF"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>