<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".UI.Fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
      >
        <androidx.cardview.widget.CardView
            android:layout_marginVertical="20dp"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="90dp">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_avatar_fragmentProfile"
                android:background="@drawable/avatar"
                android:layout_gravity="bottom"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
            <ImageView
                android:id="@+id/img_changeAvatar_fragmentProfile"
                android:src="@drawable/baseline_photo_camera_24"
                android:background="@color/lightBlack"
                android:layout_gravity="bottom"
                android:layout_width="100dp"
                android:layout_height="30dp"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/pink"
            android:gravity="center"
            android:text="Thông tin cá nhân"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/ed_email_frgProfile"
            android:hint="Email"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_marginTop="1dp"></EditText>
        <EditText
            android:id="@+id/ed_name_frgProfile"
            android:hint="Name"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_marginTop="1dp"></EditText>
        <EditText
            android:id="@+id/ed_sdt_frgProfile"
            android:hint="SĐT"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:layout_marginTop="1dp"></EditText>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save_frgProfile"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="SAVE"
            android:background="@drawable/button_style"></androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#80D9D9D9"
        android:elevation="10dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font2"
            android:paddingVertical="12dp"
            android:text="Đăng Xuất"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>