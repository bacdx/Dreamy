<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UI.Activity.Fragment.ProfileFragment">

    <RelativeLayout
        android:id="@+id/layoutAvatarUser"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#80D9D9D9"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="62.5dp">

            <ImageView
                android:id="@+id/ucAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="22dp"
                android:src="@drawable/ic_avatar" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="26dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnDangXuat"
        app:layout_constraintTop_toBottomOf="@+id/layoutAvatarUser">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnHoSo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D9D9D9"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:paddingVertical="12dp"
                android:text="Hồ sơ của tôi"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDoiMK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#80D9D9D9"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:paddingVertical="12dp"
                android:text="Đổi mật khẩu"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnCSBaoMat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D9D9D9"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:paddingVertical="12dp"
                android:text="Chính sách bảo mật"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnHoTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="#80D9D9D9"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:paddingVertical="12dp"
                android:text="Hỗ trợ"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#80D9D9D9"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font2"
                android:paddingVertical="12dp"
                android:text="Đánh giá"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnDangXuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="42dp"
        android:layout_marginBottom="33dp"
        android:backgroundTint="#80D9D9D9"
        app:cardElevation="0dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/font2"
            android:paddingVertical="12dp"
            android:text="@string/ng_xu_t"
            android:textColor="#CCFF0000"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>