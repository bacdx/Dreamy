<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.Activity.FavortiesActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >
    <LinearLayout
        android:background="#FFFFFF"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/iconback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/tv_name"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font2"
            android:textSize="22dp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="Danh sách yêu thích"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:id="@+id/tv_myListFavor"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="Sản phẩm bạn đã thích"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/item_products"
        android:background="#fff"
        android:id="@+id/rcv_myFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_topListFavor"
        android:layout_marginVertical="10dp"
        android:background="#fff"
        android:fontFamily="@font/font2"
        android:padding="5dp"
        android:textSize="18dp"
        android:text="TOP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        app:spanCount="2"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
    tools:listitem="@layout/item_products"
        android:background="#fff"
        android:id="@+id/rcv_TopFavor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
</ScrollView>